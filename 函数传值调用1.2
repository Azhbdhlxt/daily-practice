//当n>=0时，返回n!的值，否则返回-1
 
long Fact(int n)
//函数定义 
	{
		int i;
		
		long result = 1;
		
		if (n < 0)
		{
			return -1;
			
		 } 
		 else
		 {
		 for (i = 2; i <= n; i ++)
		 
         result *= i;
         
		return result;
		
	}
	 }

