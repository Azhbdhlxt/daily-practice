#include<stdio.h>
#include<stdlib.h>
#include<math.h>
#include<graphics.h>

int main(int argc, char* argv[])
{
   int magic, guess, counter=0
   /*计数器，记录用户猜的次数，初始化为0*/;
   unsigned int seed;
   
   printf("输入随机数种子");
   
   scanf("%u", &seed);
   
   srand(seed);
    
  magic = rand () % 100  + 1;
  //生成1~100之间的随机数
  do
  {
  	printf("输入猜想的值\n");
    
  	scanf("%d", &guess);
    
  	counter ++;
    
  	if (guess > magic )
    
  	printf("错了，太大\n");
    
	  else if (guess < magic )
    
	  printf("错了，太小\n");
    
	  else
    
	  printf("正确\n");
    
	   
   } while (guess != magic);
   //执行循环才对为止 
   printf("counter = %d\n", counter); 


  return 0;
}
